{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es2017"],
    "outDir": "./dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": false,
    "removeComments": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "paths": {
      "*": ["./src/*"],
    },
  },
  "include": ["src/**/*", "types/**/*"],
  "exclude": ["node_modules"]
}