{
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": "./",
    "target": "es2017",
    "module": "commonjs",
    "lib": [
      "es2017",
      "dom"
    ],
    "outDir": "./dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": false,
    "removeComments": true,
    "strictPropertyInitialization": false,
    "paths": {
      "@app/constant": [
        "libs/constant/src"
      ],
      "@app/constant/*": [
        "libs/constant/src/*"
      ],
      "@app/core": [
        "libs/core/src"
      ],
      "@app/core/*": [
        "libs/core/src/*"
      ],
      "@app/entity": [
        "libs/entity/src"
      ],
      "@app/entity/*": [
        "libs/entity/src/*"
      ]
    }
  },
}